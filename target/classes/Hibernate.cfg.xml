<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/restaurant_reservation_system?useSSL=false&amp;serverTimezone=UTC
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">2003</property>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Mappings -->
		<mapping class="com.demo.entity.Customer" />
		<mapping class="com.demo.entity.Feedback" />
		<mapping class="com.demo.entity.Reservation" />
		<mapping class="com.demo.entity.Restaurant" />
		<mapping class="com.demo.entity.RestaurantTable" />

	</session-factory>
</hibernate-configuration>
